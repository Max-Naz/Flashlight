<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_activity"
    tools:context="max_naz.flashlightapp.MainActivity">

    <CheckBox
        android:id="@+id/check_box_fon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/checkbox"
        android:textColor="@color/textOff" />

    <ImageButton
        android:id="@+id/btn_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:layout_marginBottom="13dp"
        android:contentDescription="@string/on_off_button"
        app:srcCompat="@drawable/ic_flashlight_off_90px"
        tools:ignore="ContentDescription,VectorDrawableCompat"/>

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_on_off"
        android:background="@null"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_exit_to_app_off"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/btn_volume_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/ic_volume_off_off"
        tools:ignore="ContentDescription,VectorDrawableCompat"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
